{
  "compilerOptions": {
    "strict": true,
//    "alwaysStrict": true, - TODO - play with
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
//    "noImplicitOverride": true, - TODO - play with
    "noUnusedLocals": true,
    "noUnusedParameters": true,
//    "allowUnreachableCode": false, - TODO - play with


    "target": "ESNext",
    "module": "ESNext",
//    "moduleResolution": "Node",
    "moduleResolution": "bundler",
//        "target": "es5",
//        "module": "NodeNext",
//        "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "incremental": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
//    "rootDir": "./src",
//    "outDir": "./target"
  }}
