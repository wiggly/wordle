{
  "compilerOptions": {
    "strict": true,
//    "alwaysStrict": true, - TODO - play with
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
//    "noImplicitOverride": true, - TODO - play with
    "noUnusedLocals": true,
    "noUnusedParameters": true,
//    "allowUnreachableCode": false, - TODO - play with

    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "node16",

    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "incremental": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  }}
